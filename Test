        </div>

        <button type="button" onclick="submitQuiz()">Проверить результат</button>
    </form>

    <div id="result"></div>

    <script>
        function submitQuiz() {
            const correctAnswers = {
                q1: "a",
                q2: "b",
                q3: "b",
                q4: "a",
                q5: "a"
            };

            let score = 0;
            for (let i = 1; i <= 5; i++) {
                const questionName = "q" + i;
                const selectedOption = document.querySelector('input[name="' + questionName + '"]:checked');
                if (selectedOption && selectedOption.value === correctAnswers[questionName]) {
                    score++;
                }
            }

            document.getElementById("result").textContent = "Правильных ответов: " + score + " из 5";
        }
    </script>
